<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".ThirdPageActivity.ThirdPageActivity"
    android:background="#ffffff"
    >

    <View
        android:id="@+id/view"
        android:layout_width="351dp"
        android:layout_height="429dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/rrround" />


    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="122dp"
        android:layout_height="23dp"
        android:layout_alignEnd="@+id/view"

        android:layout_alignParentBottom="true"
        android:layout_gravity="right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.735" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="178dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/profileimage" />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:orientation="vertical"
        android:layout_marginBottom="30dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:orientation="vertical"
            android:layout_marginBottom="30dp">

        <TextView
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
            android:layout_marginLeft="40dp"
        android:text="* 이름 :"
        android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/getText1"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="7dp"/>

        <TextView
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="40dp"
            android:text="* 성별 :"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/getText2"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="7dp"/>

        <TextView
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="40dp"
            android:text="* 나이 :"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/getText3"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="7dp"/>

        <TextView
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="40dp"
            android:text="* 키 :"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/getText4"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="7dp"/>

        <TextView
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="40dp"
            android:text="* 성격 :"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/getText5"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="7dp"/>

        <TextView
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="40dp"
            android:text="* 음주 :"
            android:layout_marginBottom="3dp"/>

        <TextView
            android:id="@+id/getText6"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="7dp"/>

        </LinearLayout>
    </ScrollView>




</RelativeLayout>